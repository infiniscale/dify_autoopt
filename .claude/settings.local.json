{
  "permissions": {
    "allow": [
      "Bash(git remote add:*)",
      "Bash(docker exec:*)",
      "Bash(go test:*)",
      "Bash(git add:*)",
      "Bash(git checkout:*)",
      "Bash(git merge:*)",
      "Bash(curl:*)",
      "Bash(timeout:*)",
      "Bash(pkill:*)",
      "Bash(git fetch:*)",
      "Bash(go build:*)",
      "Read(///**)",
      "Bash(git log:*)",
      "Bash(chmod:*)",
      "Bash(./test-api-rollback.sh:*)",
      "Bash(make test-api:*)",
      "Bash(make test:*)",
      "Bash(git commit:*)",
      "Bash(git rm:*)",
      "Bash(go mod:*)",
      "Bash(make:*)",
      "Bash(awk:*)",
      "Bash(cat:*)"
    ],
    "deny": []
  },
  "statusLine": {
    "type": "command",
    "command": "bash -c 'input=$(cat); MODEL=$(echo \"$input\" | jq -r \".model.display_name\"); DIR=$(echo \"$input\" | jq -r \".workspace.current_dir\"); BRANCH=\"\"; if git rev-parse --git-dir >/dev/null 2>&1; then BRANCH=\" | üåø $(git branch --show-current 2>/dev/null)\"; CHANGES=$(git status --porcelain 2>/dev/null | wc -l); if [ $CHANGES -gt 0 ]; then BRANCH=\"$BRANCH ($CHANGES)\"; fi; fi; echo \"[$MODEL] üìÅ ${DIR##*/}$BRANCH\"'"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "PowerShell",
        "hooks": [
          {
            "type": "command",
            "command": "python \"$env:CLAUDE_PROJECT_DIR\\.claude\\hooks\\validate-branch-name.py\""
          }
        ]
      },
      {
        "matcher": "PowerShell",
        "hooks": [
          {
            "type": "command",
            "command": "python \"$env:CLAUDE_PROJECT_DIR\\.claude\\hooks\\prevent-direct-push.py\""
          }
        ]
      }
    ]
  }
}
